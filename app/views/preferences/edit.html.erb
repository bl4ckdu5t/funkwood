<section class="preference">
	<h1 class="title">
  <%= link_to root_url do %>
  muster<span>d8</span>
  <% end %>
  </h1>
  <%= form_for @preference, id: 'js-preference-form', remote: true do |f| %>
  	<fieldset class="preference-section" id="js-form-1">
  		<h3>Hello, <span id="js-visitor-name"><%= @preference.fullname %></span></h3>
      <%= f.hidden_field :fullname, class: 'js-visitor-name', value: "#{@preference.fullname}" %>
      <%= f.hidden_field :age, class: 'js-visitor-age', value: "#{@preference.age}" %>
      <%= f.hidden_field :gender, class: 'js-visitor-gender', value: "#{@preference.gender}" %>
      <%= f.label :relationship_type, "What kind of relationship do you seek?", class: 'preference-label' %>
      <p class="preference--line">
        <%= f.radio_button :relationship_type, 'serious', id: 'serious' %><label for="serious">Serious</label>
      </p>
      <p class="preference--line">
        <%= f.radio_button :relationship_type, 'casual', id: 'casual' %><label for="casual">Casual</label>
      </p>
      <p class="preference--line">
        <%= f.radio_button :relationship_type, 'friendship', id: 'friendship' %><label for="friendship">Friendship</label>
      </p>
      <p class="preference--line">
        <%= f.radio_button :relationship_type, 'one-night', id: 'one-night' %><label for="one-night">One night stand</label>
      </p>
  		<nav class="clearfix fr">
  			<%= link_to home_path, class: 'preference-nav preference-skip' do %>
  				<svg viewBox="0 0 1024 1024">
						<path d="M85.76 896l895.573-384-895.573-384-0.427 298.667 640 85.333-640 85.333z"></path>
					</svg>
  				Skip
  			<% end %>
  			<a href="javascript:void(0)" class="preference-nav preference-next" id="js-next-1">
  				<svg viewBox="0 0 1024 1024">
						<path d="M512 341.333v-170.667l341.333 341.333-341.333 341.333v-170.667h-341.333v-341.333z"></path>
					</svg>
  				Next
  			</a>
  		</nav>
  	</fieldset>

  	<fieldset class="preference-section ghost" id="js-form-2">
      <%= f.label :partner_complexion, "Which is your preferred partner complexion?", class: 'preference-label' %>
      <p class="preference--line">
        <%= f.radio_button :partner_complexion, 'light-skin-partner', id: 'light-skin-partner' %><label for="light-skin-partner">Light Skinned</label>
      </p>
      <p class="preference--line">
        <%= f.radio_button :partner_complexion, 'dark-skin-partner', id: 'dark-skin-partner' %><label for="dark-skin-partner">Dark Skinned</label>
      </p>
      <%= f.label :partner_body_type, "Which is your preferred partner body type?", class: 'preference-label' %>
      <p class="preference--line">
        <%= f.radio_button :partner_body_type, 'tall-slim-partner', id: 'tall-slim-partner' %><label for="tall-slim-partner">Tall and Slim</label>
      </p>
      <p class="preference--line">
        <%= f.radio_button :partner_body_type, 'tall-thick-partner', id: 'tall-thick-partner' %><label for="tall-thick-partner">Tall and Thick</label>
      </p>
      <p class="preference--line">
        <%= f.radio_button :partner_body_type, 'short-slim-partner', id: 'short-slim-partner' %><label for="short-slim-partner">Short and Slim</label>
      </p>
      <p class="preference--line">
        <%= f.radio_button :partner_body_type, 'short-thick-partner', id: 'short-thick-partner' %><label for="short-thick-partner">Short and Thick</label>
      </p>
  		<nav class="clearfix fr">
  			<a href="javascript:void(0)" class='preference-nav preference-prev' id="js-prev-2">
  				<svg viewBox="0 0 1024 1024">
						<path d="M512 341.333v-170.667l341.333 341.333-341.333 341.333v-170.667h-341.333v-341.333z"></path>
					</svg>
  				Previous
  			</a>
  			<a href="javascript:void(0)" class="preference-nav preference-next" id="js-next-2">
  				<svg viewBox="0 0 1024 1024">
						<path d="M512 341.333v-170.667l341.333 341.333-341.333 341.333v-170.667h-341.333v-341.333z"></path>
					</svg>
  				Next
  			</a>
  		</nav>
  	</fieldset>

  	<fieldset class="preference-section ghost" id="js-form-3">
      <%= f.label :partner_working_class, "Which of these describes a partner you want", class: 'preference-label' %>
  		<p class="preference--line">
        <%= f.radio_button :partner_working_class, 'student', id: 'student_partner' %><label for="student_partner">Student</label>
  		</p>
  		<p class="preference--line">
  			<%= f.radio_button :partner_working_class, 'working', id: 'working_partner' %><label for="working_partner">Working</label>
  		</p>
  		<p class="preference--line">
  			<%= f.radio_button :partner_working_class, 'retired', id: 'retired_partner' %><label for="retired_partner">Retired</label>
  		</p>
      <%= f.label :partner_religion, "Which religion will you like a partner from?", class: 'preference-label' %>
  		<p class="preference--line">
  			<%= f.radio_button :partner_religion, 'christianity', id: 'christianity_partner' %><label for="christianity_partner">Christianity</label>
  		</p>
  		<p class="preference--line">
  			<%= f.radio_button :partner_religion, 'islam', id: 'islam_partner' %><label for="islam_partner">Islam</label>
  		</p>
      <p class="preference--line">
        <%= f.radio_button :partner_religion, 'atheist', id: 'atheist_partner' %><label for="atheist_partner">Atheist</label>
      </p>
  		<p class="preference--line">
  			<%= f.radio_button :partner_religion, 'other', id: 'other_partner' %><label for="other_partner">Other</label>
  		</p>
  		<nav class="clearfix fr">
  			<a href="javascript:void(0)" class='preference-nav preference-prev' id="js-prev-3">
  				<svg viewBox="0 0 1024 1024">
						<path d="M512 341.333v-170.667l341.333 341.333-341.333 341.333v-170.667h-341.333v-341.333z"></path>
					</svg>
  				Previous
  			</a>
  			<button class="preference-nav preference-submit" id="js-next-3" type="submit">
  				<svg viewBox="0 0 1024 1024">
						<path d="M810.667 42.667h-597.333c-47.147 0-84.907 38.187-84.907 85.333l-0.427 551.893c0 29.44 14.933 55.467 37.547 70.827l346.24 230.613 346.24-230.613c22.613-15.36 37.547-41.387 37.547-70.827l0.427-551.893c0-47.147-38.187-85.333-85.333-85.333zM426.667 682.667l-213.333-213.333 60.373-60.373 152.96 152.96 323.627-323.627 60.373 60.373-384 384z"></path>
					</svg>
  				Submit
  			</button>
  		</nav>
  	</fieldset>

  	<fieldset class="preference-section ghost" id="js-form-complete">
  		<div class="preference-complete">
  			<svg viewBox="0 0 1024 1024">
					<path d="M384 689.92l-177.92-177.92-60.373 60.373 238.293 238.293 512-512-60.373-60.373z"></path>
				</svg>
  		</div>
			<h2>Done!</h2>
			<%= link_to home_path, class: 'preference-nav preference-skip' do %>
				<svg viewBox="0 0 1024 1024">
					<path d="M85.76 896l895.573-384-895.573-384-0.427 298.667 640 85.333-640 85.333z"></path>
				</svg>
				OK
			<% end %>
  	</fieldset>
  <% end %>
</section>