<section class="preference">
	<h1 class="title">
  <%= link_to root_url do %>
  muster<span>d8</span>
  <% end %>
  </h1>
  <form action="" id="js-preference-form"><!-- form_for preference, id: 'js-preference-form', remote: true do -->
  	<fieldset class="preference-section" id="js-form-1">
  		<h3>Hello, <span id="js-visitor-name"><%= @preference.fullname %></span></h3>
      <input type="hidden" name="fullname" class="js-visitor-name" value="">
      <input type="hidden" name="age_range" class="js-visitor-age" value="">
      <input type="hidden" name="gender" class="js-visitor-gender" value="">
  		<label class="preference-label">Which of these best describes your working class?</label>
  		<p class="preference--line">
  			<input type="radio" name="working_class" id="student" value="student"><label for="student">Student</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="working_class" id="working" value="working"><label for="working">Working</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="working_class" id="retired" value="retired"><label for="retired">Retired</label>
  		</p>
  		<label for="career" class="preference-label">What is your profession?</label>
  		<input type="text" name="career" placeholder="Answer here">
  		<nav class="clearfix fr">
  			<%= link_to home_path, class: 'preference-nav preference-skip' do %>
  				<svg viewBox="0 0 1024 1024">
						<path d="M85.76 896l895.573-384-895.573-384-0.427 298.667 640 85.333-640 85.333z"></path>
					</svg>
  				Skip
  			<% end %>
  			<a href="javascript:void(0)" class="preference-nav preference-next" id="js-next-1">
  				<svg viewBox="0 0 1024 1024">
						<path d="M512 341.333v-170.667l341.333 341.333-341.333 341.333v-170.667h-341.333v-341.333z"></path>
					</svg>
  				Next
  			</a>
  		</nav>
  	</fieldset>

  	<fieldset class="preference-section ghost" id="js-form-2">
  		<label for="relationship_type" class="preference-label">What kind of relationship do you seek?</label>
  		<p class="preference--line">
  			<input type="radio" name="relationship_type" id="serious" value="serious"><label for="serious">Serious</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="relationship_type" id="casual" value="casual"><label for="casual">Casual</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="relationship_type" id="friendship" value="friendship"><label for="friendship">Friendship</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="relationship_type" id="one-night" value="one-night"><label for="one-night">One night stand</label>
  		</p>
  		<label for="religion" class="preference-label">What is your religion?</label>
  		<p class="preference--line">
  			<input type="radio" name="religion" id="christianity" value="christianity"><label for="christianity">Christianity</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="religion" id="islam" value="islam"><label for="islam">Islam</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="religion" id="other" value="other"><label for="other">Other</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="religion" id="atheist" value="atheist"><label for="atheist">Atheist</label>
  		</p>
  		<nav class="clearfix fr">
  			<a href="javascript:void(0)" class='preference-nav preference-prev' id="js-prev-2">
  				<svg viewBox="0 0 1024 1024">
						<path d="M512 341.333v-170.667l341.333 341.333-341.333 341.333v-170.667h-341.333v-341.333z"></path>
					</svg>
  				Previous
  			</a>
  			<a href="javascript:void(0)" class="preference-nav preference-next" id="js-next-2">
  				<svg viewBox="0 0 1024 1024">
						<path d="M512 341.333v-170.667l341.333 341.333-341.333 341.333v-170.667h-341.333v-341.333z"></path>
					</svg>
  				Next
  			</a>
  		</nav>
  	</fieldset>

  	<fieldset class="preference-section ghost" id="js-form-3">
  		<label for="complexion" class="preference-label">Which describes your complexion?</label>
  		<p class="preference--line">
  			<input type="radio" name="complexion" id="light-skin" value="light-skin"><label for="light-skin">Light Skinned</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="complexion" id="dark-skin" value="dark-skin"><label for="dark-skin">Dark Skinned</label>
  		</p>
  		<label for="height" class="preference-label">What is your height?</label>
  		<input type="text" name="height" placeholder="e.g 180cm or 6'1 feet">
  		<label for="weight" class="preference-label">What do you weigh?</label>
  		<input type="text" name="weight" placeholder="e.g 160 LBS, 160 pounds, 73kg">
  		<label for="body_type" class="preference-label">Which is your body type?</label>
  		<p class="preference--line">
  			<input type="radio" name="body_type" id="tall-slim" value="tall-slim"><label for="tall-slim">Tall and Slim</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="body_type" id="tall-thick" value="tall-thick"><label for="tall-thick">Tall and Thick</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="body_type" id="short-slim" value="short-slim"><label for="short-slim">Short and Slim</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="body_type" id="short-thick" value="short-thick"><label for="short-thick">Short and Thick</label>
  		</p>
  		<nav class="clearfix fr">
  			<a href="javascript:void(0)" class='preference-nav preference-prev' id="js-prev-3">
  				<svg viewBox="0 0 1024 1024">
						<path d="M512 341.333v-170.667l341.333 341.333-341.333 341.333v-170.667h-341.333v-341.333z"></path>
					</svg>
  				Previous
  			</a>
  			<a href="javascript:void(0)" class="preference-nav preference-next" id="js-next-3">
  				<svg viewBox="0 0 1024 1024">
						<path d="M512 341.333v-170.667l341.333 341.333-341.333 341.333v-170.667h-341.333v-341.333z"></path>
					</svg>
  				Next
  			</a>
  		</nav>
  	</fieldset>

  	<fieldset class="preference-section ghost" id="js-form-4">
  		<label for="partner_complexion" class="preference-label">Which is your preferred partner complexion?</label>
  		<p class="preference--line">
  			<input type="radio" name="partner_complexion" id="light-skin-partner" value="light-skin"><label for="light-skin-partner">Light Skinned</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="partner_complexion" id="dark-skin-partner" value="dark-skin"><label for="dark-skin-partner">Dark Skinned</label>
  		</p>
  		<label for="partner_body_type" class="preference-label">Which is your preferred partner body type?</label>
  		<p class="preference--line">
  			<input type="radio" name="partner_body_type" id="tall-slim-partner" value="tall-slim"><label for="tall-slim-partner">Tall and Slim</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="partner_body_type" id="tall-thick-partner" value="tall-thick"><label for="tall-thick-partner">Tall and Thick</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="partner_body_type" id="short-slim-partner" value="short-slim"><label for="short-slim-partner">Short and Slim</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="partner_body_type" id="short-thick" value="short-thick"><label for="short-thick">Short and Thick</label>
  		</p>
  		<label for="partner_working_class" class="preference-label">Which of the working class will you like a partner from?</label>
  		<p class="preference--line">
  			<input type="radio" name="partner_working_class" id="student_partner" value="student"><label for="student_partner">Student</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="partner_working_class" id="working_partner" value="working"><label for="working_partner">Working</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="partner_working_class" id="retired_partner" value="retired"><label for="retired_partner">Retired</label>
  		</p>
  		<label for="partner_working_class" class="preference-label">What profession will you like for a partner?</label>
  		<input type="text" name="partner_career" placeholder="Answer here">
  		<label for="partner_religion" class="preference-label">What religion will you like for a partner?</label>
  		<p class="preference--line">
  			<input type="radio" name="partner_religion" id="christianity_partner" value="christianity"><label for="christianity_partner">Christianity</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="partner_religion" id="islam_partner" value="islam"><label for="islam_partner">Islam</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="partner_religion" id="other_partner" value="other"><label for="other_partner">Other</label>
  		</p>
  		<p class="preference--line">
  			<input type="radio" name="partner_religion" id="atheist_partner" value="atheist"><label for="atheist_partner">Atheist</label>
  		</p>
  		<nav class="clearfix fr">
  			<a href="javascript:void(0)" class='preference-nav preference-prev' id="js-prev-4">
  				<svg viewBox="0 0 1024 1024">
						<path d="M512 341.333v-170.667l341.333 341.333-341.333 341.333v-170.667h-341.333v-341.333z"></path>
					</svg>
  				Previous
  			</a>
  			<button class="preference-nav preference-submit" id="js-next-4" type="submit">
  				<svg viewBox="0 0 1024 1024">
						<path d="M810.667 42.667h-597.333c-47.147 0-84.907 38.187-84.907 85.333l-0.427 551.893c0 29.44 14.933 55.467 37.547 70.827l346.24 230.613 346.24-230.613c22.613-15.36 37.547-41.387 37.547-70.827l0.427-551.893c0-47.147-38.187-85.333-85.333-85.333zM426.667 682.667l-213.333-213.333 60.373-60.373 152.96 152.96 323.627-323.627 60.373 60.373-384 384z"></path>
					</svg>
  				Submit
  			</button>
  		</nav>
  	</fieldset>

  	<fieldset class="preference-section ghost" id="js-form-complete">
  		<div class="preference-complete">
  			<svg viewBox="0 0 1024 1024">
					<path d="M384 689.92l-177.92-177.92-60.373 60.373 238.293 238.293 512-512-60.373-60.373z"></path>
				</svg>
  		</div>
			<h2>Done!</h2>
			<%= link_to home_path, class: 'preference-nav preference-skip' do %>
				<svg viewBox="0 0 1024 1024">
					<path d="M85.76 896l895.573-384-895.573-384-0.427 298.667 640 85.333-640 85.333z"></path>
				</svg>
				OK
			<% end %>
  	</fieldset>
  </form>
</section>